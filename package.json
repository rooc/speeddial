{
	"name": "eleventy-starter",
	"version": "1.0.0",
	"main": "scripts.js",
	"repository": "git@github.com:rooc/speeddial.git",
	"author": "rooc <vadym.hrachov@pm.me>",
	"license": "MIT",
	"scripts": {
		"clean"      : "rimraf dist",
		"jsmin"      : "terser dist/js/*.js -o dist/js/scripts.min.js",
		"htmlmin"    : "html-minifier --input-dir dist --output-dir dist --file-ext html --collapse-whitespace --remove-comments --use-short-doctype",
		"elv"        : "ELEVENTY_ENV=development eleventy --serve --port=9000",
		"elvprod"    : "ELEVENTY_ENV=production eleventy",
		"postcss"    : "postcss static/css/styles.css --o _tmp/styles.css --watch",
		"postcssprod": "NODE_ENV=production postcss static/css/styles.css --o dist/css/styles.css",
		"dev"        : "yarn elv & yarn postcss",
		"build"      : "yarn clean && yarn elvprod && yarn postcssprod && yarn jsmin && yarn htmlmin"
	},
	"dependencies": {
		"@11ty/eleventy": "^0.11.0",
		"alpinejs": "^2.7.0",
		"html-minifier": "^4.0.0",
		"postcss-clean": "^1.1.0",
		"postcss-cli": "^8.1.0",
		"rimraf": "^3.0.2",
		"tailwindcss": "^1.9.2",
		"terser": "^5.3.5"
	}
}
